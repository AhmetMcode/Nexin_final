@model IEnumerable<Nexin.Entity.Referanslar>

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align: center; margin-bottom: 20px;">Referanslar Bölümü</h1>
<p style="text-align: center; color: red; font-weight: bold;">
    Dikkat: Burası Ana Sayfadaki Referanslar Bölümü içindir. Düzenleme çalışmaz; silip yeniden yükleyin.
    114x125 boyutunda resim yüklemeniz önerilir.
</p>

<div style="text-align: right; margin-bottom: 20px;">
    <a asp-action="Create" class="btn btn-primary">Yeni Referans Ekle</a>
</div>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th style="width: 120px; text-align: center;">Resim</th>
            <th style="text-align: center;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)

        {
            <tr>
                <td style="text-align: center;">
                    <img src="~/img/@item.ResimYolu" alt="Referans Resmi" style="width: 114px; height: 125px; object-fit: cover; border-radius: 8px;" />
                </td>
                <td style="text-align: center;">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detaylar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
