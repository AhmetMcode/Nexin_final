@model IEnumerable<Nexin.Entity.HakkimizdaAnaSayfa>

@{
    ViewData["Title"] = "Index";
}

<h2>Ana Sayfa Hakkmızda Yazısı</h2>
<div>

    <img src="~/ekran görüntüsü 2023-12-14 000256.png" />
</div>
<h3>

    Resimde Görülen Ekran Buradan Yönetilir
    Baslik En Üstü Gösterir
    Icerik "ile olan yazıyı"
    Yazi1 Yazi2 gibi ifadeler ise alttaki yazıları düzenler
</h3>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Baslik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Icerik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Yazi1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Yazi2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Yazi3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Yazi4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Yazi5)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Baslik)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Icerik)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Yazi1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Yazi2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Yazi3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Yazi4)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Yazi5)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detay</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
