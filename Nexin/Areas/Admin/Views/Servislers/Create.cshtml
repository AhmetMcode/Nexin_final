@model Nexin.Entity.Servisler

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Servisler</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Baslik" class="control-label"></label>
                <input asp-for="Baslik" class="form-control" />
                <span asp-validation-for="Baslik" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KucukYazi" class="control-label"></label>
                <input asp-for="KucukYazi" class="form-control" />
                <span asp-validation-for="KucukYazi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UzunYazi" class="control-label"></label>
                <input asp-for="UzunYazi" class="form-control" />
                <span asp-validation-for="UzunYazi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label name="resim" class="control-label"></label>
                <input name="resim" type="file" class="form-control" />
                <span asp-validation-for="Resim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Icon" class="control-label"></label>
                <input asp-for="Icon" class="form-control" />
                <span name="icon" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="MetaTaglar" class="form-label fw-bold">MetaTaglar giriniz Örneğin Robotik Otomasyon , Robot Nedir....</label>
                <textarea asp-for="MetaTaglar" class="form-control" rows="2" placeholder="MetaTaglar giriniz"></textarea>
                <span asp-validation-for="MetaTaglar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
