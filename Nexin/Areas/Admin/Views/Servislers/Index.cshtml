@model IEnumerable<Nexin.Entity.Servisler>

@{
    ViewData["Title"] = "Hizmetler Listesi";
}

<h1>Hizmetler Listesi</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Yeni Hizmet Ekle</a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Baslik)</th>
            <th>@Html.DisplayNameFor(model => model.KucukYazi)</th>
            <th>@Html.DisplayNameFor(model => model.Resim)</th>
            <th>@Html.DisplayNameFor(model => model.MetaTaglar)</th>
            <th>@Html.DisplayNameFor(model => model.Icon)</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Baslik)</td>
                <td>@Html.DisplayFor(modelItem => item.KucukYazi)</td>
                <td>@Html.DisplayFor(modelItem => item.MetaTaglar)</td>
                <td>
                    <img src="~/img/@item.Resim" alt="Hizmet Resmi" style="width: 100px; height: auto;" />
                </td>
                <td>@Html.DisplayFor(modelItem => item.Icon)</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Detaylar</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
