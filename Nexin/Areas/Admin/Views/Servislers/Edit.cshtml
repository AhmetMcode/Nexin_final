@model Nexin.Entity.Servisler

@{
    ViewData["Title"] = "Hizmeti Düzenle";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

<!-- include summernote css/js -->
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Hizmeti Düzenle</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Baslik" class="font-weight-bold">Başlık</label>
                    <input asp-for="Baslik" class="form-control" placeholder="Hizmet başlığını giriniz" />
                    <span asp-validation-for="Baslik" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="KucukYazi" class="font-weight-bold">Kısa Yazı</label>
                    <input asp-for="KucukYazi" class="form-control" placeholder="Kısa açıklama giriniz" />
                    <span asp-validation-for="KucukYazi" class="text-danger"></span>
                </div>

                @* Metin alanları *@
                <div class="form-group mb-3">
                    <label asp-for="UzunYazi" class="form-label fw-bold">İçerik</label>
                    <textarea asp-for="UzunYazi" id="summernote" class="form-control" rows="2" placeholder="UzunYazi yazıyı giriniz"></textarea>
                    <span asp-validation-for="UzunYazi" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="font-weight-bold">Resim Yükle</label>
                    <input name="Resim" type="file" class="form-control-file" />
                    <span asp-validation-for="Resim" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Icon" class="font-weight-bold">İkon</label>
                    <input asp-for="Icon" class="form-control" placeholder="İkon ismini veya URL'sini giriniz" />
                    <span asp-validation-for="Icon" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="MetaTaglar" class="form-label fw-bold">MetaTaglar giriniz Örneğin Robotik Otomasyon , Robot Nedir....</label>
                    <textarea asp-for="MetaTaglar" class="form-control" rows="2" placeholder="MetaTaglar giriniz"></textarea>
                    <span asp-validation-for="MetaTaglar" class="text-danger"></span>
                </div>
                <div class="form-group d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success btn-lg">Kaydet</button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">Listeye Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


<script>
    $(document).ready(function () {
        $('#summernote').summernote();
    });
</script>