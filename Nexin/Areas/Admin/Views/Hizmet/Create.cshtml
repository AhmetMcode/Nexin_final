@using Nexin.Models;
@model ProjeEkleViewModel

@{
    ViewData["Title"] = "Create";
}
<link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

<!-- include summernote css/js -->
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
<h1 class="text-center mb-4">Yeni Proje Ekle</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-body">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Ad" class="form-label fw-bold">Proje Adı</label>
                            <input asp-for="Ad" class="form-control" placeholder="Proje adı giriniz" />
                            <span asp-validation-for="Ad" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="AltAd" class="form-label fw-bold">Proje Alt Adı</label>
                            <input asp-for="AltAd" class="form-control" placeholder="Proje alt adını giriniz" />
                            <span asp-validation-for="AltAd" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="KapakResimi" class="form-label fw-bold">Kapak Resmi (Önerilen: 510x650)</label>
                            <input asp-for="KapakResimi" class="form-control" />
                            <span asp-validation-for="KapakResimi" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="AnaResim" class="form-label fw-bold">Ana Resim (Önerilen: 696x348)</label>
                            <input asp-for="AnaResim" class="form-control" />
                            <span asp-validation-for="AnaResim" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="AnaResim1" class="form-label fw-bold">Ek Resim 1 (Önerilen: 316x247)</label>
                            <input asp-for="AnaResim1" class="form-control" />
                            <span asp-validation-for="AnaResim1" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="AnaResim2" class="form-label fw-bold">Ek Resim 2 (Önerilen: 316x247)</label>
                            <input asp-for="AnaResim2" class="form-control" />
                            <span asp-validation-for="AnaResim2" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Video" class="form-label fw-bold">Video URL</label>
                            <input asp-for="Video" class="form-control" placeholder="Video bağlantısını giriniz" />
                            <span asp-validation-for="Video" class="text-danger"></span>
                        </div>

                        @* Metin alanları *@
                        <div class="form-group mb-3">
                            <label asp-for="Icerik" class="form-label fw-bold">İçerik</label>
                            <textarea asp-for="Icerik" id="summernote" class="form-control" rows="2" placeholder="İlk yazıyı giriniz"></textarea>
                            <span asp-validation-for="Icerik" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="MetaTaglar" class="form-label fw-bold">MetaTaglar giriniz Örneğin Robotik Otomasyon , Robot Nedir....</label>
                            <textarea asp-for="MetaTaglar" class="form-control" rows="2" placeholder="MetaTaglar giriniz"></textarea>
                            <span asp-validation-for="MetaTaglar" class="text-danger"></span>
                        </div>

                       

                        <div class="form-group text-center mt-4">
                            <input type="submit" value="Oluştur" class="btn btn-success px-5" />
                        </div>
                    </form>
                </div>
            </div>
            <div class="mt-3 text-center">
                <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
            </div>
        </div>
    </div>
</div>



<script>
    $(document).ready(function () {
        $('#summernote').summernote();
    });
</script>