@model IEnumerable<Nexin.Entity.Hizmet>

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align: center; margin-bottom: 20px;">Hizmetler</h1>

<div style="text-align: right; margin-bottom: 20px;">
    <a asp-action="Create" class="btn btn-primary">Yeni Hizmet Ekle</a>
</div>

<div class="container">
    <div class="card shadow-lg">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Ad)</th>
                            <th>@Html.DisplayNameFor(model => model.AltAd)</th>
                            <th style="text-align: center;">Kapak Resmi</th>
                            <th style="text-align: center;">Ana Resim</th>
                            <th style="text-align: center;">Ana Resim2</th>
                            <th style="text-align: center;">Ana Resim2</th>
                            <th style="text-align: center;">Video</th>
                            <th>@Html.DisplayNameFor(model => model.MetaTaglar)</th>
                            <th style="text-align: center;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Ad)</td>
                                <td>@Html.DisplayFor(modelItem => item.AltAd)</td>
                                <td style="text-align: center;">
                                    <img src="~/img/@item.KapakResimi" alt="Kapak Resmi" style="width: 100px; height: 80px; object-fit: cover; border-radius: 8px;" />
                                </td>
                                <td style="text-align: center;">
                                    <img src="~/img/@item.AnaResim" alt="Ana Resim" style="width: 100px; height: 80px; object-fit: cover; border-radius: 8px;" />
                                </td>
                                <td style="text-align: center;">
                                    <img src="~/img/@item.AnaResim1" alt="Ana Resim" style="width: 100px; height: 80px; object-fit: cover; border-radius: 8px;" />
                                </td>

                                <td style="text-align: center;">
                                    <img src="~/img/@item.AnaResim2" alt="Ana Resim" style="width: 100px; height: 80px; object-fit: cover; border-radius: 8px;" />
                                </td>
                                <td style="text-align: center;">
                                    <a href="@item.Video" target="_blank" class="btn btn-info btn-sm">Video İzle</a>
                                </td>
                                <td style="text-align: center;">
                                   <span>@item.MetaTaglar</span>
                                </td>
                                <td style="text-align: center;">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detaylar</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
